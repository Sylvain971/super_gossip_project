<!DOCTYPE html>
<html>
  <head>
    <title>GossipProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'GOSSIP PROJECT', root_path, class: 'navbar-brand' %>
        </div>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Home', root_path, class: 'nav-link' %></li>
            <% if !moussaillon_signed_in? %>
              <li><%= link_to 'Sign In', new_moussaillon_session_path, class: 'nav-link' %></li>
              <li><%= link_to 'Sign Up', new_moussaillon_registration_path, class: 'nav-link' %></li>
            <% else %>
              <li><%= link_to 'New Gossip',new_gossip_path, class: 'nav-link' %></li>
              <li><%= link_to 'Sign Out', destroy_moussaillon_session_path, class: 'nav-link',
                  method: :delete %></li>
              <li><%= current_moussaillon.anonymous_username %></li>
              <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
